{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "next.config.ts",
          "package.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat"
    },
    {
      "src": "/api/health",
      "dest": "/api/health"
    }
  ],
  "env": {
    "NODE_OPTIONS": "--legacy-peer-deps"
  }
}